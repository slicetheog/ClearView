<Window x:Class="SpotlightClean.UI.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MessageBox" Height="150" Width="300"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Border CornerRadius="12" Background="#CC2D2D2D" BorderBrush="#555" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleTextBlock" Text="Title" FontSize="16" FontWeight="Bold" Foreground="White" Margin="15,10"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="15,0">
                <TextBlock x:Name="MessageTextBlock" Text="Message goes here." Foreground="White" TextWrapping="Wrap"/>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15,10">
                <Button Content="OK" Click="OkButton_Click" Width="80" Style="{StaticResource ActionButton}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>